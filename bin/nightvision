#!/usr/bin/env python
import pprint
import click
import nightvision.config


@click.command()
@click.argument('action', type=str)
@click.argument('config', type=str)
def run(action, config):
    """Watch out! Here comes a (night) falcon!

    Also, run some ACTION on a CONFIG file."""
    config, data = nightvision.config.parse(config)
    print("Watch out! Here comes a falcon!")
    print("config file:\n", pprint.pformat(config))


if __name__ == '__main__':
    run()
